<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"

        android:id="@+id/card_blue"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp"
        android:alpha="1"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="18dp"
            android:background="@drawable/violet_gradient"
            >

            <TextView
                android:id="@+id/tvVisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISA"
                android:textColor="@color/white_transparent"
                android:textSize="21sp"
                android:fontFamily="@font/roboto_blackitalic"

                />

            <TextView
                android:id="@+id/text_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ptmono"
                android:maxLines="1"
                android:text="8842 2394 2399 1293"
                android:textAllCaps="true"
                android:textColor="@color/translucent_white"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvVisa"
                />

            <TextView
                android:id="@+id/text_expired_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:fontFamily="@font/roboto_regular"
                android:text="Card Holder"
                android:textColor="@color/translucent_white"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/text_card_holder"
                />

            <TextView
                android:id="@+id/text_card_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/translucent_white"
                android:fontFamily="@font/roboto_regular"
                android:typeface="monospace"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Emma Larsen"
                />

            <TextView
                android:id="@+id/temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Expiry"
                android:textColor="@color/translucent_white"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/temp_text21"
                app:layout_constraintLeft_toLeftOf="@id/temp_text21"
                />

            <TextView
                android:id="@+id/temp_text21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_regular"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="16sp"
                android:textColor="@color/translucent_white"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="06/22"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>